<fieldset>
<%= form_for(@branch) do |f| %>
  <% if @branch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@branch.errors.count, "error") %> prohibited this branch from being saved:</h2>

      <ul>
      <% @branch.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="control-group">
    <%= f.label 'Nombre', :class=> "control-label"%>
    <div class="controls">
      <%= f.text_field :name, :class =>"input-xlarge"%>
      </div>
  </div>
  <div class="control-group">
    <%= f.label 'Ubicacion', :class=> "control-label"%>
    <div class="controls">
      <%= f.text_area :location, :class =>"input-xlarge", :rows=>3%>
    </div>
  </div>

  <div class="control-group">
    <%= f.label 'Es proveedor', :class=> "control-label"%>
    <div class="controls">
      <%= f.check_box :provider %>
      </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Crear', :class =>"btn btn-primary" %>
    <%= link_to 'Back', branches_path, :class =>"btn" %>

  </div>

  <% end %>
</fieldset>
