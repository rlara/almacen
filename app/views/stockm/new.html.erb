<h1>Stockm</h1>

<%= form_for @minimum, :url=>{:action=>"create", :controller => "stockm"} do |f| %>
  <% if @minimum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@minimum.errors.count, "error") %> prohibited this move from being saved:</h2>

      <ul>
      <% @minimum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Sucursal' %>
    <%= f.collection_select(:branch_id, Branch.all, :id, :name, :prompt => true)%>
  </div>
  <div class="field">
    <%= f.label 'Producto' %>
    <%= f.collection_select(:product_id, Product.all, :id, :name, :prompt => true)%>
  </div>

  <div class="field">
    <%= f.label 'Dia' %>
    <%= f.select :day, options_for_select([["",""],["Lunes",1],["Martes",2],["Miercoles",3],["Jueves",4],["Viernes",5],["Sabado",6],["Domingo",7]]) %>
  </div>

  <div class="field">
    <%= f.label 'Cantidad' %>
    <%= f.text_field :quantity%>
  </div>

  <div class="actions">
    <%= f.submit 'Crear', :class=>'btn btn-success' %>
  </div>
<% end %>
<%= link_to 'Regresar', stock_ms_path, :class=>"btn"  %>


